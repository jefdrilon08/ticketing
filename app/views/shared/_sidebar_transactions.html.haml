      %li
        = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-microloans-collections" } do
          %i.bi.bi-receipt
          Collections
    %li
      = link_to concern_tickets_path, class: "" do
        %i.bi.bi-receipt
        Ticket Concerns
    %li
      = link_to withdrawal_collections_path, class: "" do
        %i.bi.bi-receipt
        Withdrawals
    %li
      = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-new-entry" } do
        %i.bi.bi-plus-circle
        New Entry
    %li
      = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-interest" } do
        %i.bi.bi-calculator
        Interest
    - if microloans?
      %li
        = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-monthly-transactions" } do
          %i.bi.bi-calendar-event
          Monthly Transactions
      %li
        = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-writeoffs" } do
          %i.bi.bi-pencil-square
          Writeoffs
      %li
        = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-involuntary" } do
          %i.bi.bi-pencil-square
          Involuntary
      %li
        = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-adjustments" } do
          %i.bi.bi-wrench-adjustable-circle
          Adjustments
      

    %li
      = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-insurance-transactions" } do
        %i.bi.bi-bandaid
        Insurance

        

    - if microinsurance?
      %li
        = link_to insurance_fund_transfer_collections_path, class: "" do
          %i.bi.bi-exclamation-circle
          Insurance Fund Transfer
      %li
        = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-adjustments" } do
          %i.bi.bi-wrench-adjustable-circle
          Adjustments