      %i.bi.bi-person-square
      %span.link-name
        Tickets
    %i.bi.bi-caret-down.arrow
  %ul.sub-menu
    %li
      = link_to "#", class: "link-name" do
        Tickets
    %li
      = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-new-tix" } do
        %i.bi.bi-plus-circle
        New Ticket
    %li
      = link_to "/system_tickets" do
        %i.bi.bi-ticket
        System Tickets
    %li
      = link_to concern_tickets_path, class: "" do
        %i.bi.bi-receipt
        Concern Tickets