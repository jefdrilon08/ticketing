%li{ class: "#{params[:controller] == '' ? 'active' : ''}" }
  .icon-link
    = link_to "#", class: "" do
      %i.bi.bi-gear
      %span.link-name
        Config
    %i.bi.bi-caret-down.arrow
  %ul.sub-menu
    %li
      = link_to "#", class: "link-name" do
        Config
    %li
      = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-admin" } do
        %i.bi.bi-shield-fill-check
        Admin

    - if is_mis_user? or is_remote_bk_user? or is_remote_fm_user?
      %li
        = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-system-tools" } do
          %i.bi.bi-tools
          System Tools


