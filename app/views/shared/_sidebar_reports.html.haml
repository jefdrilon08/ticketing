%li{ class: "#{SIDEBAR_REPORTS_CONTROLLERS.include?(params[:controller]) ? 'active' : ''}" }
  .icon-link
    = link_to "#", class: "" do
      %i.bi.bi-graph-up
      %span.link-name
        Reports
    %i.bi.bi-caret-down.arrow
  %ul.sub-menu
    %li
      = link_to "#", class: "link-name" do
        Reports
    - if microloans?  
      %li
        = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-branch-reports" } do
          %i.bi.bi-building
          Branch
    %li
      = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-accounting-reports" } do
        %i.bi.bi-cash-stack
        Accounting
    %li
      = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-insurance-reports" } do
        %i.bi.bi-bandaid
        Insurance
    %li
      = link_to "#", class: "", data: { "bs-toggle": "modal", "bs-target": "#modal-nav-visualize" } do
        %i.bi.bi-plus
        Visualize
