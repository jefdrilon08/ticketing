#modal-new.modal.fade{ tabindex: "-1" }
  .modal-dialog
    .modal-content
      .modal-header
        %h3.modal-title New Supplier
      .modal-body
        .modal-body-content
          .bs-callout.bs-callout-info
            .row
              .col
                .form-group
                  %label{ for: "input-code" } Code
                  = text_field_tag :code, "", id: "input-code", class: "form-control"
                .form-group
                  %label{ for: "input-name" } Name
                  = text_field_tag :name, "", id: "input-name", class: "form-control"
                .form-group.mt-3.status-group
                  %label{ for: "input-status" } Status
                  = select_tag("status", options_for_select([["--SELECT--", ""], ["Active", "Active"], ["Inactive", "Inactive"]]), id: "input-status", class: "form-control")
                = hidden_field_tag(:id, "", id: "item-id")

                <!-- New Fields (Contact Person, Contact Number, Address) -->
                .form-group.mt-3
                  %label{ for: "input-contact-person" } Contact Person
                  = text_field_tag :contact_person, "", id: "input-contact-person", class: "form-control"
                .form-group.mt-3
                  %label{ for: "input-contact-number" } Contact Number
                  = text_field_tag :contact_number, "", id: "input-contact-number", class: "form-control", inputmode: "numeric", pattern: "\d*"
                .form-group.mt-3
                  %label{ for: "input-address" } Address
                  = text_field_tag :address, "", id: "input-address", class: "form-control"
          .message
      .modal-footer
        .controls
          %button#btn-confirm-new.btn.btn-primary
            .fa.fa-check Confirm
          %button.btn{"data-bs-dismiss" => "modal", type: "button"}
            .fa.fa-times Cancel
