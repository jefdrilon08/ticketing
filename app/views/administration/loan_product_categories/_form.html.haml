= simple_form_for([:administration, @loan_product_category]) do |f|
  .row
    .col-md-4
      .form-group
        = f.input :name, input_html: { class: 'form-control' }
    .col-md-2
      .form-group
        = f.input :code, input_html: { class: 'form-control' }
  %hr
  .controls
    .btn-group
      %button.btn.btn-primary
        .fa.fa-check
        Save
      - if @loan_product_category.new_record?
        = link_to administration_loan_product_categories_path, class: 'btn btn-danger' do
          .fa.fa-times
          Cancel
      - else
        = link_to administration_loan_product_category_path(@loan_product_category), class: 'btn btn-danger' do
          .fa.fa-times
          Cancel
