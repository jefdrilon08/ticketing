= simple_form_for [:administration, announcement] do |f|
  .row
    .col
      .form-group
        = f.input :title, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :content, input_html: { class: 'form-control' }
    
    
  %hr
  .btn-group
    %button{ type: "submit", class: "btn btn-primary" }
      .fa.fa-check
      Save
    - if announcement.new_record?
      = link_to administration_announcements_path, class: 'btn btn-danger' do
        .fa.fa-times
        Cancel
    - else
      = link_to administration_announcement_path(announcement), class: 'btn btn-danger' do
        .fa.fa-times
        Cancel
