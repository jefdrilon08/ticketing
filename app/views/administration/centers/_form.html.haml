= simple_form_for [:administration, center] do |f|
  .row
    .col
      .form-group
        = f.association :branch, as: :select, collection: @branches, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :name, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :short_name, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.association :user, input_html: { class: 'form-control' }, label: "SO"
    .col
      .form-group
        = f.input :meeting_day, as: :select, collection: Center::MEETING_DAYS.map { |o| [o[:display], o[:value]] }, input_html: { class: 'form-control' }
  %hr
  .btn-group
    %button{ type: "submit", class: "btn btn-primary" }
      .fa.fa-check
      Save
    - if center.new_record?
      = link_to administration_branches_path, class: 'btn btn-danger' do
        .fa.fa-times
        Cancel
    - else
      = link_to administration_branch_path(center.branch), class: 'btn btn-danger' do
        .fa.fa-times
        Cancel
