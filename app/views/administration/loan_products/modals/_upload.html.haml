#modal-upload.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h3.modal-title
          Upload Loan Products
      .modal-body
        .modal-body-content
          .bs-callout.bs-callout-info
            Select File to Upload
          = file_field_tag :file, class: 'form-control'
          .message
      .modal-footer
        .controls
          %button#btn-confirm-upload.btn.btn-primary
            .fa.fa-check
            Confirm
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
