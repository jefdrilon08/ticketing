#modal-prerequisite.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h3.modal-title
          Modify Prerequisite
      .modal-body
        .modal-body-content
          .bs-callout.bs-callout-info
            Select Loan Product Prerequisite
          = select_tag :loan_product_id, options_from_collection_for_select(LoanProduct.where.not(id: @loan_product.id), :id, :name, @prerequisite_id), class: "form-control select-select2", id: "select-loan-product", prompt: "-- SELECT --"
          .message
      .modal-footer
        .controls
          %button#btn-confirm-prerequisite.btn.btn-primary
            .fa.fa-check
            Confirm
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
