= simple_form_for([:administration, @loan_product]) do |f|
  .row
    .col-md-4
      .form-group
        = f.input :name, input_html: { class: 'form-control' }
    .col-md-2
      .form-group
        = f.input :monthly_interest_rate, input_html: { class: 'form-control' }
    .col-md-2
      .form-group
        %label
          Is Entry Point
        = f.input :is_entry_point, label: false
    .col-md-2
      .form-group
        %label
          Is Active
        = f.input :is_active, label: false
    .col-md-2
      .form-group
        %label
          Insured
        = f.input :insured, label: false
    .col-md-2
      .form-group
        = f.input :priority, input_html: { class: 'form-control' }
  .row
    .col
      .form-group
        = f.association :loan_product_category, input_html: { class: 'form-control' }
  .row
    .col
      .form-group
        = f.input :min_loan_amount, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :max_loan_amount, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :denomination, input_html: { class: 'form-control' }
  %hr
  .controls
    .btn-group
      %button.btn.btn-primary
        .fa.fa-check
        Save
      - if @loan_product.new_record?
        = link_to administration_loan_products_path, class: 'btn btn-danger' do
          .fa.fa-times
          Cancel
      - else
        = link_to administration_loan_product_path(@loan_product), class: 'btn btn-danger' do
          .fa.fa-times
          Cancel
