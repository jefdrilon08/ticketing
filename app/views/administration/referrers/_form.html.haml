- if referrer.errors.full_messages.any?
  %h5
    Errors
  %ul
    - referrer.errors.full_messages.each do |o|
      %li
        #{o}

= simple_form_for [:administration, referrer] do |f|
  .row
    .col
      .form-group
        = f.input :first_name, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :middle_name, input_html: { class: 'form-control' }
    .col
      .form-group
        = f.input :last_name, input_html: { class: 'form-control' }
  .row
    .col-md-4
      .form-group
        = f.input :contact_number, input_html: { class: 'form-control' }
    .col-md-4
      .form-group
        = f.input :category, as: :select, collection: Referrer::CATEGORIES, input_html: { class: 'form-control' }
    .col-md-4
      .form-group
        = f.input :date_registered, as: :string, input_html: { class: 'form-control', type: 'date' }
  .row  
    .col-md-6
      .form-group
        = f.input :status, as: :select, collection: Referrer::STATUSES, input_html: { class: 'form-control' }

  %hr
  .btn-group
    %button{ type: "submit", class: "btn btn-primary" }
      .fa.fa-check
      Save
    - if referrer.new_record?
      = link_to administration_referrers_path, class: 'btn btn-danger' do
        .fa.fa-times
        Cancel
    - else
      = link_to administration_referrer_path(referrer), class: 'btn btn-danger' do
        .fa.fa-times
        Cancel
