= simple_form_for([:administration, @project_type]) do |f|
  .row
    .col
      .form-group
      = f.input :name, input_html: { class: "form-control" }
    .col
      .form-group
        = f.input :code, input_html: { class: "form-control" }
    .col
      .form-group
        = f.association :project_type_category, input_html: { class: 'form-control' }
    .col
      .form-group
        %label
          Is Active
        = f.input :is_active, label: false

  %hr
  %button{ type: "submit", class: "btn btn-primary" }
    .fa.fa-check
    Save
  - if @project_type.new_record?
    = link_to administration_project_types_path, class: 'btn btn-danger' do
      .fa.fa-times
      Cancel
  - else
    = link_to administration_project_types_path(@project_type), class: 'btn btn-danger' do
      .fa.fa-times
      Cancel

