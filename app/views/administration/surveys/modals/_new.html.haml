#modal-new.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h3.modal-title
          New Survey
      .modal-body
        .modal-body-content
          .bs-callout.bs-callout-info
          .row
            .col
              .form-group
                %label
                  Name
                = text_field_tag :name, "", id: "input-name", class: "form-control"
          .message
      .modal-footer
        .controls
          %button#btn-confirm-new.btn.btn-primary
            .fa.fa-check
            Confirm
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
