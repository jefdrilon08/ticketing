%table#data-table.display.table.table-bordered.table-hover.table-sm
  %thead
    %tr
      %th Code
      %th Name
      %th.text-center Actions
  %tbody
    - if @items_category_list.present?
      - @items_category_list.each do |a|
        %tr{ data: { id: a.id } }
          %td{ style: "text-transform: uppercase;" }
            = a.code
          %td{ style: "text-transform: uppercase; word-wrap: break-word; white-space: normal; max-width: 300px;" }
            = a.name
          %td.text-center
            %button.btn.btn-info.btn-sm.update-button{
              data: {
                id: a.id,
                code: a.code,
                name: a.name,
                category_id: a.category_id
              }
            }
              Update
            %button.btn.btn-sm.btn-danger.delete-button{
              data: { id: a.id }
            }
              %i.fa.fa-times
              Delete
    - else
      %tr
        %td{ colspan: "3" } No subcategories available.
