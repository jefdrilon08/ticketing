#modal-create-ticket.modal.fade{ tabindex: "-1" }
  .modal-dialog
    .modal-content
      .modal-header
        %h3.modal-title
          Create Ticket
      .modal-body
        .modal-body-content
          .bs-callout.bs-callout-info
          .row
            .col
              .form-group
                %label
                  Ticket Number
                = text_field_tag :ticket_number, "", id: "input-ticket-number", class: "form-control"
                
              .form-group.mt-3
                %label
                  Assigned Person
                = select_tag :user_id, options_from_collection_for_select(@concern_ticket_users, :id, :name), class: "form-control", id: "input-assigned-person", prompt: "-- SELECT --"

              .form-group.mt-3
                %label
                  Description
                = text_area_tag :description, "", id: "input-description", class: "form-control", rows: 3

              .form-group.mt-3
                %label
                  Concern Type
                = select_tag :concern_type_id, options_from_collection_for_select(@concern_types, :id, :name), class: "form-control", id: "input-concern-type", prompt: "-- SELECT --"

              .form-group.mt-3
                %label
                  Assigned Branch
                = select_tag :branch_id, options_from_collection_for_select(@branches, :id, :name), class: "form-control", id: "input-branch", prompt: "-- SELECT --"

              .form-group.mt-3
                %label
                  Status
                = select_tag :status, options_for_select([["Pending", "open"], ["Approved", "pending"], ["Processing", "processing"]]), class: "form-control", id: "input-status"

          .message
      .modal-footer
        .controls
          %button#btn-confirm.btn.btn-primary
            .fa.fa-check
            Confirm
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
