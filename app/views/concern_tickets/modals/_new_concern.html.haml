#modal-new.modal.fade{:tabindex => "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h3.modal-title
          New Concern Ticket
      .modal-body
        .modal-body-content
          .row
            .col-md-6.col-xs-12
              .form-group
                %label{ for: "concern" } Concern Name
                %input#concern-textbox.form-control{ type: "text", placeholder: "Enter Concern" }
                %input#concern-id.form-control{ hidden: true }            
            .col-md-6.col-xs-12
              .form-group
                %label
                  Computer System
                = select_tag :computer_system_id, options_from_collection_for_select(@computer_systems, :id, :name), class: "form-control", id: "computer-system", prompt: "-- SELECT --"

          .message
      .modal-footer
        .controls
          %button#btn-confirm.btn.btn-primary
            .fa.fa-check
            Confirm
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
