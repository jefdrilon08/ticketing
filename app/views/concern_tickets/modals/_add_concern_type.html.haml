#modal-add-concern-type.modal.fade{ tabindex: "-1" }
  .modal-dialog
    .modal-content
      .modal-header
        %h3.modal-title
          New Concern
      .modal-body
        .modal-body-content
          .bs-callout.bs-callout-info
          = form_tag "add_concern_type", method: 'POST' do
            .row
              .col
                .form-group
                  %label
                    Name
                  = text_field_tag :name, "", id: "input-name", class: "form-control", required: true
                .form-group.mt-3
                  %label
                    Description
                  = text_area_tag :description, "", id: "input-description", class: "form-control", rows: 3, required: true
                .form-group.mt-3
                  %label
                    Concern ID
                  = text_field_tag :concern_id, "", id: "input-concern-id", class: "form-control", required: true
                
                %input#concern-id.form-control{ hidden: true }

            .message
      .modal-footer
        .controls
          %button#btn-confirm.btn.btn-primary{ type: "submit" }
            .fa.fa-check
            Confirm
          %button.btn{"data-bs-dismiss" => "modal", :type => "button"}
            .fa.fa-times
            Cancel
